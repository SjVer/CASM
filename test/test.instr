#bits 16
#type text
#ext ".ram"
#prefix "v2.0 raw "
#format " {}"

#bits 8
#type bin
#ext ""
#prefix 1,2, 3
#suffix 3, 2,1

lda {address:8} = 0x01 + address
sta {address:8} = 0x02 + address
add {value:8}   = 0x03 + value
jmp {address:8} = 0x04 + address
hlt 	        = 0x05

iadd {address:8} {value:8}:
	lda [address]
	add [value]
	sta [address]
